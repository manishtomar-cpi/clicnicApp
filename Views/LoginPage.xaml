<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.LoginPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" WidthRequest="300" Margin="0,0,0,10"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" WidthRequest="300" Margin="0,0,0,10"/>
        <Button Text="Login" Clicked="OnLoginClicked" WidthRequest="300" Margin="0,10,0,0"/>
        <Label x:Name="MessageLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.ModalPopup"
             IsVisible="False">
    <Grid BackgroundColor="Black" Opacity="0.5" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Frame BackgroundColor="White" Padding="20" CornerRadius="10" HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout>
                <Label x:Name="TitleLabel" FontSize="24" FontAttributes="Bold" TextColor="Black" />
                <ScrollView>
                    <Label x:Name="DescriptionLabel" FontSize="18" TextColor="Black" />
                </ScrollView>
                <Button Text="Close" Clicked="OnCloseClicked" BackgroundColor="#6200EE" TextColor="White"/>
            </StackLayout>
        </Frame>
    </Grid>
</ContentView>
